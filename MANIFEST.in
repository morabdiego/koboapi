include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include *.txt
include *.md
include *.yml
include *.yaml
include pyproject.toml
include MANIFEST.in

# Include package data
recursive-include koboapi *.py
recursive-include koboapi *.json
recursive-include koboapi *.txt

# Include tests
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.md

# Include documentation
recursive-include docs *

# Exclude compiled Python files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * *.pyd
recursive-exclude * .so
recursive-exclude * .dylib

# Exclude development and build artifacts
recursive-exclude * *.orig
recursive-exclude * *.rej
recursive-exclude * *~
recursive-exclude * .DS_Store
recursive-exclude * .coverage
recursive-exclude * .pytest_cache
recursive-exclude * .mypy_cache
recursive-exclude * .tox
recursive-exclude * *.egg-info
exclude .gitignore
exclude .env
exclude .env.example

# Exclude IDE files
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.swp
recursive-exclude * *.swo
recursive-exclude * *~

# Exclude temporary files
recursive-exclude * tmp*
recursive-exclude * temp*
recursive-exclude * *.tmp
recursive-exclude * *.log
